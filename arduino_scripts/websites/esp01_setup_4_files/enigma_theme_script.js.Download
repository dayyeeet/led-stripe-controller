	function getMobileOperatingSystem() {
  		var userAgent = navigator.userAgent || navigator.vendor || window.opera;
		
  		if( userAgent.match( /iPad/i ) || userAgent.match( /iPhone/i ) || userAgent.match( /iPod/i ) ) {
			disableBlocksatz(currentBrowser);
		} else if( userAgent.match( /Android/i ) ) {
			disableBlocksatz(currentBrowser);
		} else {
    			//console.log('unknown');
		    //Do nothing yet
		}
		
		var currentBrowser = browserDetection(true);
		var no = 0;
		if( currentBrowser == 'Firefox') { 
			no = 1; 
		}
		if( currentBrowser.indexOf('IE') >= 0) { 
			no = 1; 
			jQuery(function($) {$('.post-content-wrap').css({'width': '83%'});  }); // Korrektur von 86% auf 83%, da sonst die Spalte fuer IE zu breit  
		}
		//if( currentBrowser == 'Safari') { 
		//	no = 1;
		//}
		//console.log("No:"+no+" Browser:"+currentBrowser);
		if (no == 0) {
			disableBlocksatz(currentBrowser);
		}									
