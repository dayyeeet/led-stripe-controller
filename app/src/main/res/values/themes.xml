<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LEDStripes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ic_launcher_background</item>
        <item name="colorPrimaryVariant">@color/ic_launcher_background</item>
        <item name="colorOnPrimary">@color/ic_launcher_background</item>
        <item name="android:windowBackground">@color/ic_launcher_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ic_launcher_background</item>
        <item name="colorSecondaryVariant">@color/ic_launcher_background</item>
        <item name="colorOnSecondary">@color/ic_launcher_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:navigationBarColor" >@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashScreen" parent="Theme.LEDStripes">
        <item name="android:navigationBarColor" >@color/ic_launcher_background</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/ic_launcher_background</item>
        <item name="colorPrimaryVariant">@color/ic_launcher_background</item>
        <item name="colorOnPrimary">@color/ic_launcher_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ic_launcher_background</item>
        <item name="colorSecondaryVariant">@color/ic_launcher_background</item>
        <item name="colorOnSecondary">@color/ic_launcher_background</item>
        <item name="android:textColor">@color/ic_launcher_background</item>

    </style>
</resources>